  <ThingDef Name="PassableGranite" ParentName="StaticMineralBase">
    <defName>PassableGranite</defName>
    <label>Granite Bolders</label>
    <description>Granite Bolders. These are small enough to climb over and make great cover in a gunfight.</description>
    <graphicData>
      <texPath>Things/Rock/PassableGranite</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
      <color>(105,95,97)</color>
    </graphicData>
    <altitudeLayer>LowPlant</altitudeLayer>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.6</fillPercent>
    <coversFloor>false</coversFloor>
    <statBases>
      <MaxHitPoints>1100</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>0</Beauty>
    </statBases>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <pathCost>100</pathCost>
    <building>
      <isInert>true</isInert>
      <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
      <isNaturalRock>true</isNaturalRock>
      <isResourceRock>true</isResourceRock>
      <mineableThing>ChunkGranite</mineableThing>
      <mineableDropChance>0.3</mineableDropChance>
      <mineableYield>1</mineableYield>
      <mineableNonMinedEfficiency>0.8</mineableNonMinedEfficiency>
      <claimable>false</claimable>
      <deconstructible>false</deconstructible>
    </building>
    <filthLeaving>RockRubble</filthLeaving>
    <mineable>true</mineable>
    <!--How far away it can spawn from an existing location-->
