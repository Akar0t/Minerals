<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef  ParentName="PlantBase" Class="Minerals.ThingDef_SaltCrystal">
    <defName>SaltCrystal</defName>
    <label>salt crystal</label>
    <thingClass>Minerals.SaltCrystal</thingClass>
    <description>A deposit of salt formed by evaporation of nearbly salt water. Grows quickly on hot sunny days, but dissolves in the rain. Only persists in dry climates. Can be harvested to preserve food.</description>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Mineral/SaltCrystal</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <fillPercent>0.15</fillPercent>
    <pathCost>30</pathCost>
    <plant>
      <dieIfLeafless>false</dieIfLeafless>
      <reproduceMtbDays>50</reproduceMtbDays>
      <visualSizeRange>
        <min>0.2</min>
        <max>0.5</max>
      </visualSizeRange>
      <maxMeshCount>16</maxMeshCount>
      <lifespanFraction>1000</lifespanFraction>
      <harvestMinGrowth>0.5</harvestMinGrowth>
      <harvestWork>100</harvestWork>
      <harvestAfterGrowth>0.01</harvestAfterGrowth>
      <harvestedThingDef>Salt</harvestedThingDef>
      <harvestTag>Standard</harvestTag>
      <harvestYield>10</harvestYield>
      <growDays>15</growDays>
      <topWindExposure>0</topWindExposure>
    </plant>

    <maxStableTemperature>1000</maxStableTemperature>
    <maxGrowTemperature>500</maxGrowTemperature>
    <minGrowTemperature>-10</minGrowTemperature>
    <idealGrowTemperature>30</idealGrowTemperature>
    <meltRate>1.0</meltRate> <!-- How quickly it melts when above maxStableTemperature -->
    <dissolveRate>5.0</dissolveRate>  <!-- How quickly it dissolves in rain -->
    <lightBoostFactor>1.0</lightBoostFactor>  <!-- How effective light is for speeding formation -->
    <minGrowLight>0.0</minGrowLight>
    <minFertility>0.0</minFertility>
    <maxFertility>999</maxFertility>
    <reproduceProp>0.001</reproduceProp> <!-- How likly in a reproduction will be tried each long tick -->
    <deathProp>0.001</deathProp> <!-- How likly it goes away for ever each long tick (only when 0% grown)) -->
    <waterOffsetRadius>3</waterOffsetRadius>
    <spawnRadius>1</spawnRadius>
    <noWaterSpawnFactor>0</noWaterSpawnFactor>
    <minReproductionSize>0.9</minReproductionSize>
    <minClusterPorbability>0.001</minClusterPorbability>
    <maxClusterPorbability>0.002</maxClusterPorbability>
    <minClusterSize>10</minClusterSize>
    <maxClusterSize>100</maxClusterSize>
	<allowedBiomes>
		<li>AridShrubland</li>
		<li>TemperateForest</li>
		<li>ExtremeDesert</li>
		<li>Desert</li>
		<li>TropicalRainforest</li>
		<li>BorealArchipelago</li>
		<li>BorealForest</li>
		<li>DesertArchipelago</li>
		<li>TemperateArchipelago</li>
		<li>TropicalArchipelago</li>
		<li>TKKN_VolcanicFlow</li>
		<li>TKKN_Desert</li>
		<li>TKKN_Oasis</li>
		<li>TKKN_RedwoodForest</li>
	</allowedBiomes>
    <mustBeNextToWater>true</mustBeNextToWater>
    <waterOffsetGrowthEffect>true</waterOffsetGrowthEffect> <!-- If true, growth rate depends on distance from water -->
	<needsToBeNearTerrains>
		<li>Ocean</li>
		<li>ocean</li>
		<li>TKKN_SaltField</li>
	</needsToBeNearTerrains>
	<disallowedTerrains>
		<li>Ice</li>
		<li>ice</li>
		<li>Ocean</li>
		<li>ocean</li>
		<li>Water</li>
		<li>water</li>
	</disallowedTerrains>
    
    
  </ThingDef>

</Defs>

