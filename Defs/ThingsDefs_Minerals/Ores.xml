      <max>1.8</max>
    </visualSizeRange>
    <visualClustering>1.0</visualClustering>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualSpread>0.2</visualSpread>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSizeVariation>0.1</visualSizeVariation>
  </ThingDef>

  <ThingDef ParentName="WeatheredOre">
    <defName>WeatheredOreSteel</defName>
    <label>Weathered Iron Ore Deposits</label>
    <graphicData>
      <texPath>Things/Ore/WeatheredOreSteel</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>2800</MaxHitPoints>
    </statBases>
    <description>Deposits of Iron Ore. Iron Ore has a variety of uses as an economic metal, being abundant and easy to process. It can be strengthened by being mixed with other metals into alloys.</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Steel</mineableThing>
      <mineableYield>35</mineableYield>
      <isInert>true</isInert>
      <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
      <isNaturalRock>true</isNaturalRock>
      <claimable>false</claimable>
      <deconstructible>false</deconstructible>
      <isEdifice>true</isEdifice>
    </building>

    <randomlyDropResources>
      <li>
        <ResourceDefName>Sulfur</ResourceDefName>
        <DropProbability>10</DropProbability>
      </li>
      <li>
        <ResourceDefName>CrushedStone</ResourceDefName>
        <DropProbability>10</DropProbability>
      </li>
    </randomlyDropResources>

    <ThingsToReplace>
      <li>MineableSteel</li>
    </ThingsToReplace>
    
  </ThingDef>


